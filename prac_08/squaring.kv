BoxLayout:
    orientation: 'vertical'  # Root layout is vertical

    BoxLayout:  # Top section (horizontal)
        orientation: 'horizontal'
        spacing: 10
        padding: 10

        TextInput:
            id: input_number
            text: '0'
            multiline: False
            font_size: 32
            input_filter: 'float'
            size_hint_x: 0.3

        Button:
            text: 'Square'
            font_size: 24
            size_hint_x: 0.3
            on_press: app.handle_calculate(input_number.text)

        Label:
            id: output_label
            text: 'Result'
            font_size: 32
            color: 1, 0.5, 0.7, 1  # RGBA for pink

    Label:  # Bottom instruction label
        text: 'Enter a number and press "Square".'
        font_size: 18
        halign: 'center'
        valign: 'middle'
        size_hint_y: 0.3
        text_size: self.size
